<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Header layout containing the favorite button, date, and Done text -->
    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btn_favorite"
            android:layout_width="34dp"
            android:layout_height="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/marcador" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Thursday, 14 Feb"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/purple" />

        <TextView
            android:id="@+id/tv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/done"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/purple" />
    </LinearLayout>

    <!-- ImageView positioned below header and above the EditText -->
    <ImageView
        android:id="@+id/day_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/ll_header"
        android:scaleType="fitCenter"
        android:visibility="gone" /> <!-- Initially hidden -->

    <!-- ScrollView for content that can scroll, positioned below the ImageView -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/day_image"
        android:fillViewport="true">

        <!-- Diary entry EditText -->
        <EditText
            android:id="@+id/et_diary_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="Write your diary entry..."
            android:inputType="textMultiLine"
            android:minHeight="300dp"
            android:padding="8dp" />
    </ScrollView>

    <!-- Floating Action Button for the camera, fixed at the bottom right -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="88dp"
        android:elevation="6dp"
        android:src="@drawable/camara"
        android:visibility="visible" />

</RelativeLayout>
